// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Candidate {
  id                    String        @id @default(cuid())
  fullName              String
  cpf                   String        @unique
  birthDate             DateTime?
  email                 String        @unique
  phone                 String
  cep                   String?       // CEP
  address               String?       // Rua
  neighborhood          String?       // Bairro
  city                  String
  state                 String
  country               String        @default("Brasil")
  aboutMe               String?       @db.Text
  currentSalary         Decimal?
  expectedSalary        Decimal?
  employmentStatus      String?       // Trabalhando / Disponível
  startAvailability     String?       // Imediata / 15 dias, 30 dias, outro
  scheduleAvailability  String?       // Manhã/Tarde/Integral/Sábado
  bestInterviewTime     String?       // Manhã (08h - 12h), Tarde (13h - 18h), Horário de almoço, Fora comercial
  technicalSkills       String[]      // Ex: Excel, Inglês (Checkboxes)
  driverLicense         String[]      // Checkbox, A, B, AB, C, D, E
  
  linkedinUrl           String?
  portfolioUrl          String?
  resumeFileUrl         String?
  resumeData            Bytes?
  resumeContentType     String?
  
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  
  // LGPD
  consentDate           DateTime?
  consentIp             String?

  applications          Application[]
  notes                 Note[]

  @@index([cpf])
  @@index([email])
}

model Job {
  id              String        @id @default(cuid())
  companyName     String        @default("") // Empresa cliente
  title           String        // Nome da Vaga (ex: Sales, Quotes)
  status          JobStatus     @default(EM_ANDAMENTO)
  openedAt        DateTime?     @default(now())
  area            String        @default("") // People, Sales, etc.
  hiringManager   String        @default("")
  managerContact  String        @default("")
  type            JobType       @default(CLT)
  shift           String        @default("") // Turno (horário de trabalho)
  salaryBudget    Decimal?      // Orçamento da vaga
  salaryRange     String?       // Faixa Salarial (Ex: 5k-7k) - Público
  sla             Int?          // SLA (Dias para fechar)
  
  department      String        // Keep for compatibility
  description     String        @default("") @db.Text
  requirements    String        @default("") @db.Text
  city            String        @default("")
  state           String        @default("")
  workMode        String        @default("PRESENCIAL")
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  applications    Application[]
}

model Application {
  id                String            @id @default(cuid())
  candidateId       String
  jobId             String?           // Se vazio, considera-se "Banco de Talentos"
  currentStage      ApplicationStage  @default(TRIAGEM)
  previousStage     ApplicationStage?
  appliedAt         DateTime          @default(now())
  lastStageChange   DateTime          @default(now())
  
  // Histórico/Comentários acumulativos
  recruiterNotes    String?           @db.Text
  
  // Evaluation fields from previous version (keeping for safety)
  salaryExpectation Decimal?
  availability      String?
  score             Decimal?
  rejectionReason   String?
  source            String?

  candidate         Candidate         @relation(fields: [candidateId], references: [id])
  job               Job?              @relation(fields: [jobId], references: [id])
  notes             Note[]
  stageHistory      StageHistory[]

  @@unique([candidateId, jobId])
}

model StageHistory {
  id              String            @id @default(cuid())
  applicationId   String
  fromStage       ApplicationStage?
  toStage         ApplicationStage
  changedAt       DateTime          @default(now())
  changedBy       String            // User ID
  notes           String?
  
  application     Application       @relation(fields: [applicationId], references: [id])
}

model Note {
  id              String      @id @default(cuid())
  candidateId     String
  applicationId   String?
  content         String      @db.Text
  createdBy       String      // User ID
  createdAt       DateTime    @default(now())
  isPrivate       Boolean     @default(false)
  
  candidate       Candidate   @relation(fields: [candidateId], references: [id])
  application     Application? @relation(fields: [applicationId], references: [id])
}

model EmailTemplate {
  id              String      @id @default(cuid())
  name            String
  subject         String
  body            String      @db.Text
  stage           ApplicationStage
  variables       String[]    // ["firstName", "jobTitle", "companyName"]
  isActive        Boolean     @default(true)
  createdAt       DateTime    @default(now())
}

// NextAuth Models
model User {
  id            String    @id @default(cuid())
  name          String?   // Changed from fullName for NextAuth compatibility
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(RECRUITER)
  createdAt     DateTime  @default(now())
  
  accounts      Account[]
  sessions      Session[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}


enum ApplicationStage {
  TRIAGEM
  SCREENING
  ENTREVISTA_RH
  ENTREVISTA_LIDERANCA
  PROPOSTA
  ADMISSAO
  REPROVADO
  STANDBY
}

enum JobType {
  CONTRATO
  ESTAGIO
  CLT
  TEMPORARIO
}

enum JobStatus {
  EM_ANDAMENTO
  FECHADA
  PAUSADA
  RASCUNHO
  DRAFT
  OPEN
  CLOSED
}

enum UserRole {
  ADMIN
  RECRUITER
  HIRING_MANAGER
}


